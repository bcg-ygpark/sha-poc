{
  "name": "digital-wallet-monorepo",
  "version": "1.0.0",
  "description": "Digital Wallet Mobile App - React + TypeScript Monorepo",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "pnpm --filter @template/mobile dev",
    "dev:bo": "pnpm --filter @template/bo dev",
    "dev:fm": "pnpm --filter @template/fm dev",
    "build": "pnpm --filter @template/mobile build",
    "build:bo": "pnpm --filter @template/bo build",
    "build:fm": "pnpm --filter @template/fm build",
    "preview": "pnpm --filter @template/mobile preview",
    "lint": "eslint . --ext .js,.ts,.jsx,.tsx --fix",
    "lint:check": "eslint . --ext .js,.ts,.jsx,.tsx",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "pnpm -r run clean",
    "clean:all": "pnpm -r run clean && rm -rf node_modules pnpm-lock.yaml"
  },
  "dependencies": {
    "date-fns": "^3.0.0",
    "date-fns-tz": "^3.2.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.0",
    "@types/node": "^20.19.4",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react-swc": "^3.10.2",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.5",
    "globals": "^16.2.0",
    "jsdom": "^24.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "rimraf": "^5.0.0",
    "tailwindcss": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.20.3",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.35.1",
    "vite": "^6.3.6",
    "vitest": "^3.2.4"
  }
}
